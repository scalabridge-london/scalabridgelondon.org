<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="ScalaBridge London Icon" href="/favicon.png">
    <link rel="Robots.txt" href="/robots.txt">
    <link rel="stylesheet" type="text/css" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" type="text/css" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link href="https://fonts.googleapis.com/css?family=Raleway|Playfair+Display:400,400i&display=swap" rel="stylesheet">
    <script type="application/javascript" src="/js/all.js"/>
  </head>
  <body>
    <div class="content">
      <div class="banner {% block bannerClass %}{% endblock %}">
        <header>
          {% include "nav.njk" %}
        </header>
        {% block hero %}{% endblock %}
      </div>
        {% block content %}
        {{ content | safe }}
        {% endblock %}
    </div>

    {% import "footer.njk" as footer %}
    {{ footer.footer() }}
    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
